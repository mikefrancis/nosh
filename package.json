{
  "name": "@mikefrancis/nosh",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.2",
    "dayjs": "^1.8.23",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "redux-batched-actions": "^0.4.1",
    "redux-thunk": "^2.3.0",
    "rss-parser": "^3.7.6",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.7",
    "@types/redux-logger": "^3.0.7",
    "autoprefixer": "^9.7.4",
    "postcss-cli": "^7.1.0",
    "postcss-nested": "^4.2.1",
    "redux-logger": "^3.0.6",
    "tailwindcss": "^1.4.4"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "build:css": "postcss src/styles/index.postcss -o src/styles/index.css",
    "watch:css": "postcss src/styles/index.postcss -o src/styles/index.css -w",
    "start": "npm run watch:css & react-scripts start",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
